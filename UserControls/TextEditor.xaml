<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="NotepadApp.UserControls.TextEditor">
    <UserControl.Styles>
        <Style Selector="TextBox">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="Foreground" Value="#000000"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="CaretBrush" Value="Black"/>
        </Style>
        <Style Selector="TextBox:focus">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="Foreground" Value="#000000"/>
        </Style>
        <Style Selector="TextBox:pointerover">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="Foreground" Value="#000000"/>
        </Style>
    </UserControl.Styles>
    
    <Grid Background="#FFFFFF">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Satır Numaraları - VS Code Stili -->
        <Border Grid.Column="0" 
                Background="#1E1E1E"
                BorderBrush="#007ACC"
                BorderThickness="0,0,2,0">
            <ScrollViewer VerticalScrollBarVisibility="Hidden" 
                          HorizontalScrollBarVisibility="Disabled"
                          Background="#1E1E1E">
                <TextBlock x:Name="LineNumbersTextBlock" 
                           FontFamily="Consolas,Menlo,Monaco,Courier New,monospace" 
                           FontSize="14"
                           Foreground="#858585"
                           TextAlignment="Right"
                           Margin="10,10,10,10"
                           LineHeight="22"
                           Background="#1E1E1E"
                           Text="1"/>
            </ScrollViewer>
        </Border>

        <!-- Metin Editörü - Beyaz Arka Plan -->
        <ScrollViewer Grid.Column="1"
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Auto"
                     Background="#FFFFFF">
            <TextBox x:Name="TextEditorBox"
                     AcceptsReturn="True"
                     AcceptsTab="True"
                     FontFamily="Consolas,Menlo,Monaco,Courier New,monospace"
                     FontSize="14"
                     Background="#FFFFFF"
                     Foreground="#000000"
                     BorderThickness="0"
                     TextWrapping="Wrap"
                     Padding="15,10"
                     LineHeight="22"
                     MinHeight="500"
                     VerticalAlignment="Stretch"
                     HorizontalAlignment="Stretch"
                     Watermark="Yazmaya başlayın..."
                     CaretBrush="#000000"
                     SelectionBrush="#007ACC"
                     SelectionForegroundBrush="White"/>
        </ScrollViewer>
    </Grid>
</UserControl>
