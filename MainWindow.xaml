                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="{Binding StatusText}" Margin="10,5" Foreground="White" FontWeight="Medium"/>
                <Rectangle Grid.Column="1" Width="1" Fill="#005A9E" Margin="5,5"/>
                <TextBlock Grid.Column="2" Text="{Binding LineColumnInfo}" Margin="10,5" Foreground="White"/>
                <Rectangle Grid.Column="3" Width="1" Fill="#005A9E" Margin="5,5"/>
                <TextBlock Grid.Column="4" Text="{Binding WordCountInfo}" Margin="10,5" Foreground="White"/>
                <Rectangle Grid.Column="5" Width="1" Fill="#005A9E" Margin="5,5"/>
                <TextBlock Grid.Column="6" Text="{Binding CharacterCountInfo}" Margin="10,5" Foreground="White"/>
            </Grid>
        </Border>
    </Grid>
</Window>
