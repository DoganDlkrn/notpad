        </Menu>

        <!-- AraÃ§ Ã‡ubuÄŸu -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Background="#3E3E42" Height="50" Margin="0">
            <Button Content="ðŸ“„ Yeni" Command="{Binding NewFileCommand}" Margin="10,8"/>
            <Button Content="ðŸ“ AÃ§" Command="{Binding OpenFileCommand}" Margin="5,8"/>
            <Button Content="ðŸ’¾ Kaydet" Command="{Binding SaveFileCommand}" Margin="5,8"/>
