                <MenuItem Header="Kes" Command="{Binding CutCommand}"/>
                <MenuItem Header="Kopyala" Command="{Binding CopyCommand}"/>
                <MenuItem Header="YapÄ±ÅŸtÄ±r" Command="{Binding PasteCommand}"/>
