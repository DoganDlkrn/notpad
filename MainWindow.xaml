                                Cursor="Hand"/>
                    </StackPanel>
                </DataTemplate>
            </TabControl.ItemTemplate>
            <TabControl.ContentTemplate>
                <DataTemplate>
                    <controls:TextEditor Document="{Binding}"/>
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>

        <!-- Durum Ã‡ubuÄŸu -->
        <Border Grid.Row="3" Background="#007ACC" BorderBrush="#005A9E" BorderThickness="0,1,0,0" 
