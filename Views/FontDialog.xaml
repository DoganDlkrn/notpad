<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="NotepadApp.Views.FontDialog"
        Title="Yazı Tipi" Height="400" Width="400"
        WindowStartupLocation="CenterOwner"
        CanResize="False">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Yazı Tipi:" Margin="0,0,0,5"/>
        <ListBox x:Name="FontListBox" Grid.Row="1" Height="150">
            <ListBoxItem Content="Arial"/>
            <ListBoxItem Content="Consolas"/>
            <ListBoxItem Content="Courier New"/>
            <ListBoxItem Content="Times New Roman"/>
            <ListBoxItem Content="Verdana"/>
        </ListBox>

        <TextBlock Grid.Row="2" Text="Boyut:" Margin="0,10,0,5"/>
        <ComboBox x:Name="SizeComboBox" Grid.Row="3">
            <ComboBoxItem Content="12"/>
            <ComboBoxItem Content="14"/>
            <ComboBoxItem Content="16"/>
            <ComboBoxItem Content="18"/>
            <ComboBoxItem Content="20"/>
        </ComboBox>

        <Border Grid.Row="4" BorderBrush="Gray" BorderThickness="1" Margin="0,10,0,0">
            <StackPanel>
                <TextBlock Text="Önizleme" Margin="5,5,5,0" FontWeight="Bold"/>
                <TextBlock x:Name="PreviewTextBlock" Text="AaBbCc XxYyZz 012345" 
                           FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"
                           Margin="10"/>
            </StackPanel>
        </Border>

        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Tamam" Click="OK_Click" Width="80" Margin="5,0"/>
            <Button Content="İptal" Click="Cancel_Click" Width="80" Margin="5,0"/>
        </StackPanel>
    </Grid>
</Window>
