<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="NotepadApp.Views.GoToDialog"
        Title="Satıra Git" Height="150" Width="300"
        WindowStartupLocation="CenterOwner"
        CanResize="False">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Satır Numarası:" Margin="0,0,0,5"/>
        <TextBox x:Name="LineNumberTextBox" Grid.Row="1"/>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Git" Click="GoTo_Click" Width="80" Margin="5,0"/>
            <Button Content="İptal" Click="Cancel_Click" Width="80" Margin="5,0"/>
        </StackPanel>
    </Grid>
</Window>
